@model ilk.Models.departmanlar

@{
    ViewData["Title"] = "DepartmanEkle";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<br />


<h1>DepartmanEkle</h1>
<br />
<form class="form-group" method="post">
    <b>Departman ID</b>
    @Html.TextBoxFor(x => x.departman_id, new { @class = "form-control" })
    <br />
    <b>Departman Adı</b>
    @Html.TextBoxFor(x => x.departman_adi, new { @class = "form-control" })

    <br />
    <button class="btn btn-info">Departman Ekle</button>
</form>